<Page
    x:Class="OiM_UWP.Views.TSPView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OiM_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{ThemeResource AppBarBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromHorizontalOffset="100" />

                    </TransitionCollection>
                </Grid.Transitions>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Problem komiwojażera" FontSize="24" Height="Auto"
                         Width="Auto" Margin="10,10,-10,-10" UseLayoutRounding="False" d:LayoutRounding="Auto">
                </TextBlock>
                <TextBlock  Margin="15,40,15,0" TextWrapping="Wrap">Problem komiwojażera – to zagadnienie optymalizacyjne, polegające na znalezieniu minimalnego cyklu Hamiltona w pełnym grafie ważonym. Typowa ilustracja problemu przedstawia wędrownego sprzedawcę, który ma odwiedzić n miast w taki sposób aby odbyło się to jak najniższym kosztem. Inaczej droga ktorą pokona sprzedawca powinna być możliwie jak najkrótsza.</TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ScrollViewer x:ConnectionId='8' Visibility="Collapsed" x:Name="treeScrollViewer" Padding="10" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,0,10,10" Background="{ThemeResource SystemAccentColor}">
                    <Canvas x:ConnectionId='10' x:Name="matrixGrid">
                        <Canvas.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="100" />
                            </TransitionCollection>
                        </Canvas.ChildrenTransitions>
                    </Canvas>
                </ScrollViewer>
                <ScrollViewer Grid.Column="0" Margin="10,0,10,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid Background="{ThemeResource SystemAccentColor}">
                    <TextBlock Text="Tablica punktów" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <StackPanel x:ConnectionId='9' x:Name="pointsTable"  Margin="0,24,0,0" >
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromHorizontalOffset="100" />
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                    </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
        <ScrollViewer Grid.Column="1" Background="{ThemeResource SystemAccentColor}">

            <StackPanel Orientation="Vertical">

                <ListViewHeaderItem Content="Ustawienia" />
                <StackPanel>

                    <Button Style="{ThemeResource ButtonRevealStyle}" Width="200" Margin="0,2" >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="OpenFile" />
                            <TextBlock Text="Otwórz Plik" Margin="10" />
                        </StackPanel>
                    </Button>
                    <Button Style="{ThemeResource ButtonRevealStyle}" Width="200" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Save" />
                            <TextBlock Text="Zapisz Plik" Margin="10" />
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='7' Style="{ThemeResource ButtonRevealStyle}" Width="200" Margin="0,2"                       >
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="RepeatAll" />
                            <TextBlock Text="Generuj punkty" Margin="10" />
                        </StackPanel>
                    </Button>
                    <Button Style="{ThemeResource ButtonRevealStyle}" Width="200" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="RepeatAll" />
                            <TextBlock Text="Generuj" Margin="10" />
                        </StackPanel>
                    </Button>

                    <Button Style="{ThemeResource ButtonRevealStyle}" Width="200" Margin="0,2">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Calculator" />
                            <TextBlock Text="Licz" Margin="10" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ListViewHeaderItem Content="Konfiguracja" />
                <TextBox x:ConnectionId='2' x:Name="vertexATextBox" Header="Podaj współrzędne wierzchołka A:" PlaceholderText="0,0" Margin="10,10,10,0"
                 InputScope="Text" />
                <TextBox x:ConnectionId='3' x:Name="vertexBTextBox" Header="Podaj współrzędne wierzchołka B:" PlaceholderText="1,1" Margin="10,10,10,0"
                 InputScope="Text" />
                <TextBox x:ConnectionId='4' x:Name="holesQuantityTextBox" Header="Podaj liczbę otworów:" PlaceholderText="Ilość otworów" Margin="10,10,10,0"
                 InputScope="Number" />
                <RadioButton x:ConnectionId='5' x:Name="randomRadioButton" Content="Losowo" Margin="10,10,10,0"/>
                <RadioButton x:ConnectionId='6' x:Name="holesRadioButton" Content="Według punktów" Margin="10,10,10,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>


